&lt;Window x:Class="WinDeck.UI.Windows.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinDeck"
        Width="300" Height="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Opacity="0"
        KeyDown="Window_KeyDown"
        Deactivated="Window_Deactivated"&gt;

    &lt;Window.Resources&gt;
        &lt;!-- Converter for visibility --&gt;
        &lt;BooleanToVisibilityConverter x:Key="BoolToVisConverter" /&gt;

        &lt;!-- Button style --&gt;
        &lt;Style TargetType="Button" x:Key="ShortcutButtonStyle"&gt;
            &lt;Setter Property="Background" Value="#404040" /&gt;
            &lt;Setter Property="Foreground" Value="White" /&gt;
            &lt;Setter Property="BorderBrush" Value="#007ACC" /&gt;
            &lt;Setter Property="BorderThickness" Value="1" /&gt;
            &lt;Setter Property="Margin" Value="2" /&gt;
            &lt;Setter Property="Padding" Value="5" /&gt;
            &lt;Setter Property="FontSize" Value="12" /&gt;
            &lt;Setter Property="FontWeight" Value="SemiBold" /&gt;
            &lt;Setter Property="Cursor" Value="Hand" /&gt;
            &lt;Setter Property="Template"&gt;
                &lt;Setter.Value&gt;
                    &lt;ControlTemplate TargetType="Button"&gt;
                        &lt;Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"&gt;
                            &lt;Grid&gt;
                                &lt;Grid.RowDefinitions&gt;
                                    &lt;RowDefinition Height="Auto" /&gt;
                                    &lt;RowDefinition Height="*" /&gt;
                                &lt;/Grid.RowDefinitions&gt;

                                &lt;TextBlock Text="{Binding Number}"
                                          Grid.Row="0"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Top"
                                          FontSize="10"
                                          FontWeight="Bold"
                                          Foreground="#CCCCCC"
                                          Margin="0,2,4,0" /&gt;

                                &lt;TextBlock Text="{Binding Name}"
                                          Grid.Row="1"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextWrapping="Wrap"
                                          TextAlignment="Center"
                                          Foreground="{TemplateBinding Foreground}"
                                          FontSize="{TemplateBinding FontSize}"
                                          FontWeight="{TemplateBinding FontWeight}"
                                          Margin="{TemplateBinding Padding}" /&gt;
                            &lt;/Grid&gt;
                        &lt;/Border&gt;
                        &lt;ControlTemplate.Triggers&gt;
                            &lt;Trigger Property="IsMouseOver" Value="True"&gt;
                                &lt;Setter Property="Background" Value="#505050" /&gt;
                                &lt;Setter Property="BorderBrush" Value="#00A0FF" /&gt;
                            &lt;/Trigger&gt;
                            &lt;Trigger Property="IsPressed" Value="True"&gt;
                                &lt;Setter Property="Background" Value="#606060" /&gt;
                            &lt;/Trigger&gt;
                            &lt;Trigger Property="IsEnabled" Value="False"&gt;
                                &lt;Setter Property="Background" Value="#2A2A2A" /&gt;
                                &lt;Setter Property="Foreground" Value="#666666" /&gt;
                                &lt;Setter Property="BorderBrush" Value="#333333" /&gt;
                            &lt;/Trigger&gt;
                        &lt;/ControlTemplate.Triggers&gt;
                    &lt;/ControlTemplate&gt;
                &lt;/Setter.Value&gt;
            &lt;/Setter&gt;
        &lt;/Style&gt;
    &lt;/Window.Resources&gt;

    &lt;Border Background="#2D2D30"
            BorderBrush="#007ACC"
            BorderThickness="2"
            CornerRadius="8"&gt;
        &lt;Grid Margin="10"&gt;
            &lt;Grid.RowDefinitions&gt;
                &lt;RowDefinition Height="Auto" /&gt;
                &lt;RowDefinition Height="Auto" /&gt;
                &lt;RowDefinition Height="*" /&gt;
                &lt;RowDefinition Height="Auto" /&gt;
            &lt;/Grid.RowDefinitions&gt;

            &lt;!-- Title --&gt;
            &lt;TextBlock Text="WinDeck"
                       Grid.Row="0"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" /&gt;

            &lt;!-- Search Box --&gt;
            &lt;TextBox x:Name="SearchTextBox"
                     Grid.Row="1"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Background="#404040"
                     Foreground="White"
                     BorderBrush="#007ACC"
                     BorderThickness="1"
                     Padding="8,6"
                     FontSize="12"
                     Margin="0,0,0,10"&gt;
                &lt;TextBox.Style&gt;
                    &lt;Style TargetType="TextBox"&gt;
                        &lt;Setter Property="Template"&gt;
                            &lt;Setter.Value&gt;
                                &lt;ControlTemplate TargetType="TextBox"&gt;
                                    &lt;Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4"&gt;
                                        &lt;ScrollViewer x:Name="PART_ContentHost" /&gt;
                                    &lt;/Border&gt;
                                &lt;/ControlTemplate&gt;
                            &lt;/Setter.Value&gt;
                        &lt;/Setter&gt;
                    &lt;/Style&gt;
                &lt;/TextBox.Style&gt;
            &lt;/TextBox&gt;

            &lt;!-- Shortcuts Grid --&gt;
            &lt;ScrollViewer Grid.Row="2"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"&gt;
                &lt;ItemsControl ItemsSource="{Binding ShortcutButtons}"&gt;
                    &lt;ItemsControl.ItemsPanel&gt;
                        &lt;ItemsPanelTemplate&gt;
                            &lt;UniformGrid Columns="3" /&gt;
                        &lt;/ItemsPanelTemplate&gt;
                    &lt;/ItemsControl.ItemsPanel&gt;
                    &lt;ItemsControl.ItemTemplate&gt;
                        &lt;DataTemplate&gt;
                            &lt;Button Style="{StaticResource ShortcutButtonStyle}"
                                    Height="80"
                                    IsEnabled="{Binding IsEnabled}"
                                    Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisConverter}}"
                                    Click="ShortcutButton_Click"
                                    Tag="{Binding Number}" /&gt;
                        &lt;/DataTemplate&gt;
                    &lt;/ItemsControl.ItemTemplate&gt;
                &lt;/ItemsControl&gt;
            &lt;/ScrollViewer&gt;

            &lt;!-- Status/Help Text --&gt;
            &lt;TextBlock Grid.Row="3"
                       Text="Press number keys (0-9) or click shortcuts â€¢ ESC to close"
                       FontSize="10"
                       Foreground="#CCCCCC"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,10,0,0" /&gt;
        &lt;/Grid&gt;
    &lt;/Border&gt;
&lt;/Window&gt;
